{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/../src/$1",
        "^@App(.*)$": "<rootDir>/../src/app/$1",
        "^@Common(.*)$": "<rootDir>/../src/common$1",
        "^@Modules(.*)$": "<rootDir>/../src/modules/$1"
    }
}